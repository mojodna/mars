<h1>Listing Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <%- @posts.each do |post|%>
    <tr>
      <td><%=h post.title %></td>
      <td><%=h post.body %></td>
    
      <td><%=link_to 'Show', object_url(post) %></td>
      <td><%=link_to 'Edit', edit_object_url(post) %></td>
      <td><%=link_to 'Destroy', object_url(post), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'New Post', new_object_url %>